<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Media Fetcher" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Facebook Page ID:" Margin="5"/>
            <TextBox x:Name="facebookPageIdTextBox" Margin="5"/>

            <TextBlock Text="Instagram User ID:" Margin="5"/>
            <TextBox x:Name="instagramUserIdTextBox" Margin="5"/>

            <TextBlock Text="Access Token:" Margin="5"/>
            <TextBox x:Name="accessTokenTextBox" Margin="5"/>

            <TextBlock Text="Number of Threads:" Margin="5"/>
            <TextBox x:Name="threadCountTextBox" Margin="5"/>

            <Button x:Name="FetchPostsButton" Content="Fetch Posts" Margin="5" Click="FetchPostsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>






