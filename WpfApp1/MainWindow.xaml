<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Media Fetcher" Height="400" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <!-- Facebook Page ID Input -->
            <TextBlock Text="Facebook Page ID:" Margin="5"/>
            <TextBox Name="facebookPageIdTextBox" Margin="5" Width="300" />

            <!-- Instagram User ID Input -->
            <TextBlock Text="Instagram User ID:" Margin="5"/>
            <TextBox Name="instagramUserIdTextBox" Margin="5" Width="300" />

            <!-- Thread Count Input -->
            <TextBlock Text="Number of Threads:" Margin="5"/>
            <TextBox Name="threadCountTextBox" Margin="5" Width="50" />

            <!-- Fetch Button -->
            <Button Name="FetchPostsButton" Content="Fetch Posts" Margin="10" Width="150" Click="FetchPostsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

